{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            // 该配置基于运行模块的配置
            // 相当于运行命令 python -m flask run --no-debugger --noreload
            // env 表示要设置的临时环境变量
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                //"--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        }
    ]
}